<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="otomasyon.reservationsystem.controller.HomePageController">
    <children>
        <VBox layoutX="32.0" layoutY="26.0" prefHeight="200.0" prefWidth="100.0" />
        <MenuBar layoutX="23.0" layoutY="13.0">
            <menus>
                <Menu mnemonicParsing="false" text="Rezervasyon">
                    <items>
                        <MenuItem fx:id="rezervasyonMenuItem" mnemonicParsing="false" text="Rezervasyon" onAction="#handleRezervasyonMenuItemAction"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="VIP Oda">
                    <items>
                        <MenuItem fx:id="vipOdaMenuItem" mnemonicParsing="false" text="VIP oda" onAction="#handleVipOdaMenuItemAction"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Menü">
                    <items>
                        <MenuItem fx:id="menuMenuItem" mnemonicParsing="false" text="Sipariş" onAction="#handleMenuMenuItemAction"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Rezervasyonlarım">
                    <items>
                        <MenuItem fx:id="rezervasyonlarimMenuItem" mnemonicParsing="false" text="Rezervasyonlarım" onAction="#handleRezervasyonlarimMenuItemAction"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Siparişlerim">
                    <items>
                        <MenuItem fx:id="siparislerimMenuItem" mnemonicParsing="false" text="Siparişlerim" onAction="#handleSiparislerimMenuItemAction"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <Label fx:id="vipOdaLabel" text="VIP Oda" layoutX="200.0" layoutY="200.0" visible="false"/>
    </children>
</AnchorPane>